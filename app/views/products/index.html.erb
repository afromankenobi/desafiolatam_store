<%= form_tag products_search_path, method: :get, class: "navbar-form navbar-left search-form" do %>
  <%= text_field_tag(
      :name,
      params[:name],
      placeholder: "Search",
      class: "form-control"
  ) %>
  <%= text_field_tag(
      :price,
      params[:price],
      placeholder: "Price",
      class: "form-control"
  ) %>
